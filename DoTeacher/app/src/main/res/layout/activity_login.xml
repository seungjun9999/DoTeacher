<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
    </data>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                tools:context=".ui.login.LoginActivity">

            <Button
                    android:text="로그인"
                    android:textColor="@color/white"
                    android:layout_width="317dp"
                    android:layout_height="55dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="18sp"
                    android:background="@drawable/login_btn_round"
                    app:backgroundTint="@null"
                    android:id="@+id/guestlogin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextText2"
                    android:layout_marginTop="30dp" />

            <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/icon_dosunsang"
                    android:id="@+id/imageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="40dp" />

            <EditText
                    android:layout_width="317dp"
                    android:layout_height="55dp"
                    android:inputType="text"
                    android:paddingLeft="40dp"
                    android:hint="Email"
                    android:background="@drawable/login_edit_text"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/montserrat_semibold"
                    android:ems="10"
                    android:id="@+id/editTextText"
                    app:layout_constraintTop_toBottomOf="@+id/textView5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/user"
                    app:layout_constraintTop_toTopOf="@+id/editTextText"
                    app:layout_constraintStart_toStartOf="@+id/editTextText"
                    app:layout_constraintBottom_toBottomOf="@+id/editTextText"
                    android:layout_marginStart="15dp" />

            <EditText
                    android:layout_width="317dp"
                    android:layout_height="55dp"
                    android:inputType="text"
                    android:paddingLeft="40dp"
                    android:hint="Password"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:background="@drawable/login_edit_text"
                    android:fontFamily="@font/montserrat_semibold"
                    android:ems="10"
                    android:id="@+id/editTextText2"
                    app:layout_constraintTop_toBottomOf="@+id/editTextText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="15dp" />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/pwd"
                    android:id="@+id/imageView11"
                    app:layout_constraintTop_toTopOf="@+id/editTextText2"
                    app:layout_constraintBottom_toBottomOf="@+id/editTextText2"
                    app:layout_constraintStart_toStartOf="@+id/editTextText2"
                    android:layout_marginStart="17dp" />

            <TextView
                    android:text="- OR Continue with -"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:fontFamily="@font/montserrat"
                    app:layout_constraintTop_toBottomOf="@+id/guestlogin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="80dp" />

            <Button
                    android:text="Google로 로그인"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:id="@+id/googlelogin"
                    android:textColor="@color/black"
                    android:background="@drawable/login_btn_google"
                    app:backgroundTint="@null"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6"
                    android:layout_marginTop="30dp" />

            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/googleg_standard_color_18"
                    android:id="@+id/imageView17"
                    app:layout_constraintStart_toStartOf="@+id/googlelogin"
                    app:layout_constraintTop_toTopOf="@+id/googlelogin"
                    app:layout_constraintBottom_toBottomOf="@+id/googlelogin"
                    android:layout_marginStart="20dp" />

            <Button
                    android:text="이메일로 회원가입"
                    android:textColor="@color/black"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:background="@drawable/login_btn_google"
                    app:backgroundTint="@null"
                    android:id="@+id/tv_signup"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/googlelogin"
                    android:layout_marginTop="20dp" />

            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:srcCompat="@drawable/mail"
                    android:id="@+id/imageView18"
                    app:layout_constraintStart_toStartOf="@+id/tv_signup"
                    app:layout_constraintTop_toTopOf="@+id/tv_signup"
                    android:layout_marginTop="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_signup"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="18dp" />


                <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/loginlottie"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:lottie_rawRes="@raw/anime_loading"
                        app:lottie_autoPlay="false"
                        app:lottie_loop="true"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                    android:text="도선생"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView"
                    android:fontFamily="@font/pretendard_black"
                    android:textSize="40sp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>